<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head') %>


</head>

<body>
    <header class="champagne-face">


        <%- include('includes/navvster') %>

            <h2 class="drink-head"> champagne</h2>

    </header>

    <main>

        <section class="layout">
            <section class="double-search">
                <div>
                    <%- include('includes/filter') %>
                </div>
            </section>
            <div class="product-grid">
                <% for(let i=0; i < champagnes.length; i++) { %>
                    <div class="product">

                        <a class="linkster" href="/champagne/<%=champagnes[i].route %>">
                            <img src="/assets/champagne-pics/<%=champagnes[i].featured_img %>" alt="Product 1 Image"
                                width="234px" height="290px">
                            <p class="mini-titles">
                                <%= champagnes[i].name %>
                            </p>
                            <p class="mini-titles">
                                $<%= champagnes[i].price_variation.price %>

                            </p>
                        </a>
                        <button class="cart-button"> Add to Cart </button>
                    </div>
                    <% } %>
            </div>
        </section>

        <section>
            <%- include('includes/waiting-list.ejs') %>

        </section>
        <p></p>
    </main>
    <footer>
        <%- include('includes/bottom-bit') %>

    </footer>
</body>

</html>